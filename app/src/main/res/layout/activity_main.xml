<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E0E0E0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/lay"
        android:background="#000"
        android:layout_height="140dp">

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="240dp"
        android:layout_height="115dp"

        android:layout_alignEnd="@+id/lay"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-34dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/lay"
        android:background="#BDBDBD"
        android:id="@+id/bar"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:id="@+id/login_logo"
            android:layout_marginLeft="15dp"
            android:src="@drawable/power_icon"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/login_logo"
            android:background="#BDBDBD"
            android:gravity="center"
            android:text="LOG-IN"
            android:id="@+id/login_button"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:id="@+id/help_logo"
            android:layout_toRightOf="@id/login_button"
            android:layout_marginLeft="150dp"
            android:src="@drawable/info"/>

        <Button
            android:id="@+id/help_button"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/help_logo"
            android:background="#BDBDBD"
            android:gravity="center"
            android:text="HELP"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginRight="10dp"
            android:textSize="20dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/user_option"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar"
        android:textStyle="italic"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:text="@string/user_option"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="327dp"
        android:layout_height="453dp"
        android:layout_below="@+id/user_option"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/layout_2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:background="@drawable/layout_card">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/user_logo"
                android:id="@+id/u_logo"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/u_logo"
                android:layout_margin="15dp"
                android:text="@string/user"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/u_text"
                android:textSize="20sp"
                android:textAlignment="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:id="@+id/layout_3"
            android:layout_height="170dp"
            android:layout_below="@id/layout_2"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:background="@drawable/layout_card">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/sponser_logo"
                android:id="@+id/s_logo"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/s_logo"
                android:layout_margin="15dp"
                android:text="@string/sponser"
                android:textStyle="bold"
                android:id="@+id/s_text"
                android:textColor="#000"
                android:textSize="20sp"
                android:textAlignment="center"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>